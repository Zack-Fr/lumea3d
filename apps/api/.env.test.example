# Test Environment Configuration
# Copy this file to .env.test and fill in your test environment values

# Database - Use a separate test database
DATABASE_URL="postgresql://lumea_test:password@localhost:5432/lumea_test?schema=public"

# Redis - Use separate Redis instance or different DB
REDIS_URL="redis://localhost:6379/1"

# MinIO/S3 - Use test bucket
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="lumea-test-assets"

# AWS Credentials (for MinIO compatibility)
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"
AWS_REGION="us-east-1"

# JWT Secret
JWT_SECRET="test-jwt-secret-key-for-integration-tests"

# Processing
PROCESSING_CONCURRENCY=2

# API Configuration
PORT=3000
API_BASE_URL="http://localhost:3000"

# Storage URLs
CDN_BASE_URL="https://test-cdn.example.com"
STORAGE_BASE_URL="http://localhost:9000/lumea-test-assets"

# Feature Flags for Testing
ENABLE_ASSET_PROCESSING=true
ENABLE_WEBSOCKET=true
ENABLE_DOWNLOAD_ANALYTICS=false

# Test-specific Settings
TEST_TIMEOUT=30000
TEST_PARALLEL_JOBS=1